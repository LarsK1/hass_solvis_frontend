{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-constant-binary-expression": "off"
  },
  "overrides": [
    {
      "files": ["tests/**/*.ts"],
      "env": { "node": true },
      "parser": null,
      "plugins": [],
      "rules": {}
    }
  ]
}
