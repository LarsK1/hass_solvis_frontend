{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bootstrap-sha": "",
  "include-v-in-tag": true,
  "plugins": [],
  "release-type": "node",
  "changelog-path": "CHANGELOG.md",
  "packages": {
    ".": {
      "release-type": "node",
      "extra-files": [
        {
          "type": "json",
          "path": "package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "hacs.json",
          "jsonpath": "$.version",
          "optional": true
        }
      ]
    }
  }
}
